<UserControl
    x:Class="DimensionForge._3D.Views.ViewPort3DXView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:helix="http://helix-toolkit.org/wpf/SharpDX"
    xmlns:local="clr-namespace:DimensionForge._3D.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels3D="clr-namespace:DimensionForge._3D.ViewModels"
    xmlns:extensions="clr-namespace:DimensionForge._3D.viewport3DXExtensions"
    xmlns:customBehaviors="clr-namespace:DimensionForge._3D.Behaviors"
    d:DataContext="{d:DesignInstance Type=viewmodels3D:Canvas3DViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>

        <helix:Viewport3DX
            x:Name="view1"           
            BackgroundColor="beige"
            Camera="{Binding Camera}"
            CameraRotationMode="Trackball" 
            CameraMode="Inspect"
            FixedRotationPointEnabled="True"
            EffectsManager="{Binding EffectsManager}"
            IsZoomEnabled="True"
            ShowCameraInfo="True"
            ShowCoordinateSystem="True"
            ShowFrameDetails="True"
            ShowTriangleCountInfo="True"
            ZoomExtentsWhenLoaded="true"
            >

            <i:Interaction.Behaviors>
                <extensions:Viewport3DXBehavior/>
                <customBehaviors:ClickBehavior Command="{Binding ObjectedClickedCommand}"/>
            </i:Interaction.Behaviors>

    

            <helix:ItemsModel3D ItemsSource="{Binding Shapes}">
                <helix:ItemsModel3D.ItemTemplate>
                    <DataTemplate>
                        <helix:MeshGeometryModel3D
                            EnableViewFrustumCheck="False"
                            Geometry="{Binding Geometry}"
                            Material="{Binding Material}"
                            RenderWireframe="False"
                            Transform="{Binding Transform}" />
                       
                    </DataTemplate>
                    
                </helix:ItemsModel3D.ItemTemplate>
            </helix:ItemsModel3D>

            <helix:ItemsModel3D ItemsSource="{Binding Shapes}">
                <helix:ItemsModel3D.ItemTemplate>
                    <DataTemplate>
                        <helix:BatchedMeshGeometryModel3D
                            BatchedGeometries="{Binding BatchedMeshes}"
                            BatchedMaterials="{Binding ModelMaterials}"
                            EnableViewFrustumCheck="False"
                            Material="{Binding BaseMaterial}"
                            Transform="{Binding Transform}" />
                    </DataTemplate>
                </helix:ItemsModel3D.ItemTemplate>

            </helix:ItemsModel3D>

            

            <helix:SpotLight3D Color="Yellow" />
            <helix:AmbientLight3D Color="Green" />
            <helix:DirectionalLight3D Direction="0,1,-1" Color="LightYellow" />


        </helix:Viewport3DX>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding RandomSpereCommand}">
                Add sphere
            </Button>

            <Button
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding RandomCylinderCommand}">
                Add Cylinder
            </Button>
        </StackPanel>



        <StackPanel
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">

            <StackPanel Orientation="Vertical">
                <Button
                Margin="10"
                Command="{Binding ImportCommand}"
                CommandParameter="C:\MyObjFile.obj"
                Content="Import OBJ file" />

                <Button
                Margin="10"
                Command="{Binding ZoomToCommand}"
                Content="Zoom To Object" />
            </StackPanel>
                

            <Button
                Margin="10"
                Command="{Binding ScaleDownCommand}"
                Content="Scale Down " />

            <Button
                Margin="10"
                Command="{Binding RotateCommand}"
                Content="Add Rotation " />

            <Button
                Margin="10"
                Command="{Binding TranslateCommand}"
                Content="Add transform " />

            <Button
                Margin="10"
                Command="{Binding ConvertTranformationsCommand}"
                Content="Convert Tranformations " />



        </StackPanel>



    </Grid>
</UserControl>
